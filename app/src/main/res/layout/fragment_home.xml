<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="#FFFFFF">

    <Button
        android:id="@+id/button_qr_scan"
        android:layout_width="222dp"
        android:layout_height="49dp"
        android:layout_above="@+id/button_make_an_order"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="91dp"
        android:text="@string/qr"
        android:textColor="@color/colorWhite"
        app:backgroundTint="@color/colorPrimary"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/text_view_qr"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="104dp"
        android:layout_marginEnd="113dp"
        android:layout_marginBottom="91dp"
        android:textColor="@color/colorText"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_make_an_order"
        android:layout_width="222dp"
        android:layout_height="49dp"
        android:layout_above="@+id/text_view_qr"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="179dp"
        android:text="@string/make_an_order"
        android:textColor="@color/colorWhite"
        app:backgroundTint="@color/colorPrimary"
        tools:ignore="MissingConstraints" />

</RelativeLayout>